<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
  <springProperty scope="context" name="appLogTarget" source="app.log.target"
    defaultValue="FILE"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{ISO8601}" %-5p [%c{3}"] \(%t:%X{}"\) %m%n</Pattern>
    </layout>
  </appender>
  <appender name="FILE"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/itam/itam-ui.log</file>
    <append>true</append>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/itam/itam-ui.log.%d{yyyy-MM-dd}_%i.gz
      </fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <maxHistory>10</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{ISO8601}" %-5p [%c{3}"] \(%t:%X{}"\) %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.zaxxer.hikari" level="DEBUG"/>
  <root>
    <level value="INFO"/>
    <appender-ref ref="${appLogTarget}"/>
  </root>
</configuration>